<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reabar.wimc.Fragments.CarScreenFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="80dp"
            android:weightSum="1">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/car_model"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_weight="0.62"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/cars_list_row_car_model_company"
                android:autoText="false"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/cars_list_row_car_model_company"
                android:layout_alignEnd="@+id/textView2"
                android:layout_weight="0.53" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/car_license"
                android:id="@+id/textView5"
                android:layout_below="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_weight="0.62"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/cars_list_row_car_license"
                android:autoText="false"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/cars_list_row_car_model_company"
                android:layout_alignEnd="@+id/textView2"
                android:layout_weight="0.53" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <EditText
                android:layout_width="173dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/emailSharedinput"
                android:autoText="false"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/cars_list_row_car_model_company"
                android:layout_alignEnd="@+id/textView2"
                android:hint="@string/email"
                android:textSize="28dp" />

            <Button
                android:layout_width="176dp"
                android:layout_height="58dp"
                android:text="@string/add_user_to_share_this_car"
                android:id="@+id/addUserButton"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/to_delete_the_user_click_on_his_row"
            android:id="@+id/deleteTextView"
            android:layout_marginTop="55dp"
            android:layout_below="@+id/cars_list_row_car_model_company"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textStyle="bold|italic" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listSharedUsersID"
            android:layout_alignParentStart="true" />
    </LinearLayout>
</RelativeLayout>
