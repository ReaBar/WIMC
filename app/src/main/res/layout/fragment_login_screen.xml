<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login1"
    tools:context="com.example.reabar.wimc.Fragments.LoginScreenFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WimfCar"
        android:id="@+id/logoText"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="50dp"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="#234f84"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailInput"
            android:layout_marginTop="132dp"
            android:singleLine="false"
            android:hint="@string/email"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="28dp"
            android:textStyle="italic"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:imeOptions="actionDone" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/passwordInput"
            android:singleLine="false"
            android:layout_below="@+id/emailInput"
            android:layout_alignStart="@+id/emailInput"
            android:hint="@string/enter_password"
            android:layout_alignEnd="@+id/emailInput"
            android:inputType="textPassword"
            android:textSize="28dp"
            android:textStyle="italic"
            android:textColor="#fdfdfd"
            android:textColorHint="#ffffff"
            android:imeOptions="actionDone" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="@string/login"
            android:id="@+id/loginButton"
            android:layout_alignEnd="@+id/passwordInput"
            android:layout_alignStart="@+id/passwordInput"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="26dp"
            android:layout_below="@+id/passwordInput" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="@string/sign_up"
            android:id="@+id/signUpButton"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/loginButton"
            android:layout_marginBottom="39dp"
            android:layout_toStartOf="@+id/resetPasswordButton"
            android:textSize="22dp"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="@string/reset_password"
            android:id="@+id/resetPasswordButton"
            android:layout_alignTop="@+id/signUpButton"
            android:layout_alignEnd="@+id/loginButton"
            android:textSize="22dp"
            android:textStyle="bold|italic" />

    </RelativeLayout>


</FrameLayout>
