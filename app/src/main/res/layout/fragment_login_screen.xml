<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reabar.wimc.Fragments.LoginScreenFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WimfCar"
        android:id="@+id/logoText"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="60dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#234f84"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="40dp">


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/emailInput"
            android:layout_marginTop="132dp"
            android:singleLine="false"
            android:hint="Email"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />



        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/passwordInput"
            android:singleLine="false"
            android:layout_below="@+id/emailInput"
            android:layout_alignStart="@+id/emailInput"
            android:hint="Password"
            android:layout_alignEnd="@+id/emailInput"
            android:inputType="textPassword" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/loginButton"
            android:layout_below="@+id/passwordInput"
            android:layout_alignEnd="@+id/passwordInput"
            android:layout_marginTop="32dp"
            android:layout_alignStart="@+id/passwordInput" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:id="@+id/signUpButton"
            android:layout_below="@+id/loginButton"
            android:layout_alignStart="@+id/loginButton"
            android:layout_toStartOf="@+id/resetPasswordButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:id="@+id/resetPasswordButton"
            android:layout_alignBottom="@+id/signUpButton"
            android:layout_alignEnd="@+id/loginButton" />

    </RelativeLayout>


</FrameLayout>
