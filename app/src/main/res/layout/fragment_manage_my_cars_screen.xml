<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reabar.wimc.Fragments.ManageMyCarsScreenFragment">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/carCompanyInput"
        android:singleLine="false"
        android:hint="Company.."
        android:layout_below="@+id/carModelInput"
        android:layout_alignStart="@+id/carModelInput" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/carColorInput"
        android:singleLine="false"
        android:hint="Color.."
        android:layout_below="@+id/carLicenseInput"
        android:layout_alignStart="@+id/carLicenseInput" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/carLicenseInput"
        android:singleLine="false"
        android:hint="License Number.."
        android:layout_gravity="center_horizontal|top"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/carModelInput"
        android:singleLine="false"
        android:hint="Model.."
        android:layout_below="@+id/carColorInput"
        android:layout_alignStart="@+id/carColorInput" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Car"
        android:id="@+id/newCarButton"
        android:layout_gravity="center_horizontal|top"
        android:layout_below="@+id/carCompanyInput"
        android:layout_alignStart="@+id/carCompanyInput"
        android:layout_alignEnd="@+id/carCompanyInput" />


    <ListView
        android:layout_width="wrap_content"
        android:layout_height="329dp"
        android:id="@+id/carsListView"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newCarButton" />

</RelativeLayout>
