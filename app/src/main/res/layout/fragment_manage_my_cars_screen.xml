<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.reabar.wimc.Fragments.ManageMyCarsScreenFragment">

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/carLicenseInput"
        android:singleLine="false"
        android:hint="License Number.."
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="65dp"
        android:imeOptions="actionDone" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/carCompanyInput"
        android:singleLine="false"
        android:hint="Company.."
        android:layout_above="@+id/newCarButton"
        android:layout_alignStart="@+id/carModelInput"
        android:layout_marginLeft="50dp"
        android:imeOptions="actionDone" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/carColorInput"
        android:singleLine="false"
        android:hint="Color.."
        android:layout_below="@+id/carLicenseInput"
        android:layout_alignStart="@+id/carLicenseInput"
        android:layout_marginLeft="50dp"
        android:imeOptions="actionDone" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/carModelInput"
        android:singleLine="false"
        android:hint="Model.."
        android:layout_above="@+id/carCompanyInput"
        android:layout_alignStart="@+id/carColorInput"
        android:layout_marginLeft="50dp"
        android:imeOptions="actionDone" />

    <Button
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:text="Add New Car"
        android:id="@+id/newCarButton"
        android:layout_gravity="center_horizontal|top"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/carCompanyInput"
        android:layout_alignEnd="@+id/carCompanyInput" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Manage your cars"
        android:id="@+id/logoText"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#234f84"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainProgressBar"
        style="@android:style/Widget.Holo.ProgressBar.Large"
        android:indeterminate="true"
        android:background="#fafafa"
        android:layout_marginTop="25dp"
        android:indeterminateBehavior="cycle" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="356dp"
        android:id="@+id/carsListView"
        android:layout_below="@+id/newCarButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp" />

</LinearLayout>
