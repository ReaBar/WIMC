<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reabar.wimc.Fragments.ParkingScreenFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="70dp"
        android:weightSum="1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="City"
            android:id="@+id/parking_cityInput"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_weight="0.62"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/parking_streetInput"
            android:autoText="false"
            android:hint="Street"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cars_list_row_car_model_company"
            android:textStyle="bold"
            android:layout_alignEnd="@+id/textView2"
            android:layout_weight="0.53" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/parking_streetNumberInput"
            android:autoText="false"
            android:hint="Number"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cars_list_row_car_model_company"
            android:layout_alignEnd="@+id/textView2"
            android:layout_weight="0.53"
            android:textStyle="bold" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="Parking Lot Name"
            android:id="@+id/parking_parkingLotInput"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_weight="0.62"
            android:textAlignment="center"
            android:textStyle="bold" />

        <EditText
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/parking_parkingLotFloorNumberInput"
            android:autoText="false"
            android:hint="Floor Number"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cars_list_row_car_model_company"
            android:textStyle="bold"
            android:layout_alignEnd="@+id/textView2"
            android:layout_weight="0.53" />

    </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/parking_parkingLotRowColorInput"
                android:autoText="false"
                android:hint="Row Color"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/cars_list_row_car_model_company"
                android:textStyle="bold"
                android:layout_alignEnd="@+id/textView2"
                android:layout_weight="0.53" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <Button
                android:layout_width="173dp"
                android:layout_height="110dp"
                android:id="@+id/imageButton"
                android:layout_weight="0.28"
                android:text="Take Photo" />


            <Button
                android:layout_width="173dp"
                android:layout_height="110dp"
                android:id="@+id/imageButton1"
                android:layout_weight="0.28"
                android:text="Get Location With GPS" />




        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:weightSum="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:id="@+id/SaveParkingButton"
                android:text="Save Parking" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
