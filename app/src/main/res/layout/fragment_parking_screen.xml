<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reabar.wimc.Fragments.ParkingScreenFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/save_location_for_car"
        android:id="@+id/carnumber"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_weight="0.62"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_marginTop="50dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="45dp"
        android:weightSum="1">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="@string/city"
            android:id="@+id/parking_cityInput"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_weight="0.62"
            android:textAlignment="center"
            android:textStyle="bold"
            android:imeOptions="actionDone" />

        <EditText
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/parking_streetInput"
            android:autoText="false"
            android:hint="@string/street"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cars_list_row_car_model_company"
            android:textStyle="bold"
            android:layout_alignEnd="@+id/textView2"
            android:layout_weight="0.53"
            android:imeOptions="actionDone" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/parking_streetNumberInput"
            android:autoText="false"
            android:hint="@string/number"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cars_list_row_car_model_company"
            android:layout_alignEnd="@+id/textView2"
            android:layout_weight="0.53"
            android:textStyle="bold"
            android:imeOptions="actionDone" />
        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:hint="@string/parking_lot_name"
            android:id="@+id/parking_parkingLotInput"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_weight="0.62"
            android:textAlignment="center"
            android:textStyle="bold"
            android:imeOptions="actionDone" />

        <EditText
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/parking_parkingLotFloorNumberInput"
            android:autoText="false"
            android:hint="@string/floor_number"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/cars_list_row_car_model_company"
            android:textStyle="bold"
            android:layout_alignEnd="@+id/textView2"
            android:layout_weight="0.53"
            android:imeOptions="actionDone" />

    </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/parking_parkingLotRowColorInput"
                android:autoText="false"
                android:hint="@string/row_color"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/cars_list_row_car_model_company"
                android:textStyle="bold"
                android:layout_alignEnd="@+id/textView2"
                android:layout_weight="0.53"
                android:imeOptions="actionDone" />

        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:text="@string/take_photo" />


            <Button
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:id="@+id/locationButton"
                android:text="@string/get_gps_location" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">


            <TextView
                android:layout_width="226dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/longitude_and_latitude"
                android:id="@+id/gpsText" />

            <ImageView
                android:layout_width="82dp"
                android:layout_height="126dp"
                android:id="@+id/imagePlace"
                android:layout_weight="0.31" />
        </LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/SaveParkingButton"
            android:text="@string/save_parking" />


    </LinearLayout>

</FrameLayout>
